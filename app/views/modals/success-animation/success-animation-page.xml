<Page xmlns="http://schemas.nativescript.org/tns.xsd" shownModally="onShownModally" class="bg-transparent">
    <GridLayout class="bg-black bg-opacity-50">
        <StackLayout class="bg-white rounded-lg m-4 p-6">
            <!-- Success Animation -->
